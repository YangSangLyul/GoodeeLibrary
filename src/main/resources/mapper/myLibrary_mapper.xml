<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
   "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd"
>

<mapper namespace="com.spring.main.dao.QuestionDAO">
	<select id="question_list" resultType="com.spring.main.dto.QuestionDTO">
		SELECT queidx,id,subject,reg_date,ansstatus FROM question ORDER BY reg_date DESC
	</select>
	
	<insert id="write" parameterType="com.spring.main.dto.QuestionDTO">
		INSERT INTO QUESTION(queIdx,id,subject,content,ansstatus,type) 
			VALUES(queIdx_seq.NEXTVAL,#{id},#{subject},#{content},#{ansstatus},#{type})
	</insert>
	
	<select id="detail" resultType="com.spring.main.dto.QuestionDTO">
		SELECT id,subject,content,reg_date,ansstatus FROM question WHERE queidx=#{param1}
	</select>
</mapper>