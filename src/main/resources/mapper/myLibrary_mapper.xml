<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
   "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd"
>

<mapper namespace="com.spring.main.dao.QuestionDAO">
	
	<select id="question_list" resultType="question">
		SELECT queidx,id,subject,reg_date,ansstatus FROM question ORDER BY reg_date DESC
	</select>
	
	
	<!-- <select id="question_list" resultType="question">
		SELECT queidx, id,subject,content,reg_date, rnum
		FROM (
			SELECT queidx, id,subject,content,reg_date, 
			ROW_NUMBER() OVER(ORDER BY queidx DESC) AS rnum FROM question
		)
	WHERE rnum BETWEEN #{param1} AND #{param2}
	</select>-->
	
	
	<insert id="question_write" 
		useGeneratedKeys="true"
		keyProperty="queIdx"
		keyColumn="queIdx"
		parameterType="question">
		INSERT INTO QUESTION(queIdx,id,subject,content,ansstatus,type) 
			VALUES(queIdx_seq.NEXTVAL,#{id},#{subject},#{content},#{ansstatus},#{type})
	</insert>
	
	<select id="question_detail" resultType="question">
		SELECT queidx,id,subject,content,reg_date,ansstatus,type FROM question WHERE queidx=#{param1}
	</select>
	
	<update id="question_edit" parameterType="question">
		UPDATE question SET subject=#{subject}, type=#{type}, content=#{content} WHERE queIdx=6 
	</update>
	
	<delete id="question_delete">
		DELETE FROM question WHERE queidx=#{param1}
	</delete>
	
	<select id="allCount" resultType="Integer">
		SELECT COUNT(queidx) FROM question
	</select>
	
	<insert id="writeFile"> 
		INSERT INTO questionphoto(quephotoidx,queidx,orifilename,newfilename)
			VALUES(quephotoidx_seq.NEXTVAL,#{param1},#{param2},#{param3})
	</insert>
	
	<select id="fileList" resultType="Qphoto">
		SELECT * FROM questionphoto WHERE queidx=#{param1}
	</select>
</mapper>